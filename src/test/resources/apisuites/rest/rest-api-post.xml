<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Post API Test">

    <test name="[ Posts ] Check GET post's information request method">
        <classes>
            <class name="in.co.gorest.api.post.rest.PostTest">
                <methods>
                    <include name="verifyGetPostsInfoUsingQueryParametersTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="[ Posts ] Check POST request method">
        <classes>
            <class name="in.co.gorest.api.post.rest.PostTest">
                <methods>
                    <include name="verifyPostRequestUsingUserIdTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>