<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Comment API Test">

    <test name="[ Comments ] Check POST request method">
        <parameter name="browserName" value="chrome"/>
        <parameter name="startEndpoint" value="users"/>
        <classes>
            <class name="in.co.gorest.api.comment.rest.CommentTest">
                <methods>
                    <include name="verifyPostCommentInfoTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="[ Comments ] Check DELETE request method">
        <parameter name="browserName" value="chrome"/>
        <parameter name="startEndpoint" value="comments"/>
        <classes>
            <class name="in.co.gorest.api.comment.rest.CommentTest">
                <methods>
                    <include name="verifyDeleteCommentInfoTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>