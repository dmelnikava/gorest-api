    </test>

    <test name="[ Posts ] Check get all posts by user's id request method">
        <classes>
            <class name="in.co.gorest.api.post.graphql.PostTest">
                <methods>
                    <include name="verifyGetAllPostsByUserIdTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>