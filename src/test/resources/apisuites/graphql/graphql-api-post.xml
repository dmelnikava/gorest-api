<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Post GraphQL API Test">

    <test name="[ Posts ] Check update body request method">
        <classes>
            <class name="in.co.gorest.api.post.graphql.PostTest">
                <methods>
                    <include name="verifyUpdatePostBodyTest"/>
                </methods>
            </class>
